<%- include('partials/header') -%>

<% function truncateString(str, maxLength) {
    if (str.length > maxLength) {
        return str.slice(0, maxLength) + '...';
    }
    return str;
} %>

<div class="col s12 m9">
    <div class="card-panel center-align">
    <div class="row">
        <% for (var i = 0; i < reviews.length; i++) { %>
            <div class="col s12 m6 l4">
                <div class="card z-depth-2 medium ">
                    
                    <div class="card-image">
                        <a href="/review/<%= reviews[i].review._id %>">
                            <img class="custom-image" src="<%= reviews[i].review.image %>">
                        </a>
                    </div>
                    <div class="card-content center-align">
                        <span class="card-title"><%= truncateString(reviews[i].review.title, 20) %></span>
                        <p><%= truncateString(reviews[i].review.review, 20) %></p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <div class="row">
        <div class="col s12">
            <a class="waves-effect waves-light btn" href="/recommends">Return to Feed</a>
        </div>
    </div>
</div>
</div>

<%- include('partials/footer') -%>
