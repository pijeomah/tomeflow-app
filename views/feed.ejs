<%- include('partials/header') -%>
<% function truncateString(str, maxLength) {
    if (str.length > maxLength) {
        return str.slice(0, maxLength) + '...';
    }
    return str;
} %>
<div class="col s12 m9 "> 
<div class="card-panel center-align">
    <div class="row">
        <% for (var i = 0; i < review.length; i++) { %>
            <div class="col s12 m6 l4 ">
                <div class="card z-depth-2 medium ">
                    <div class="card-content ">
                        <a href="/review/<%= review[i]._id %>">
                            <img src="<%= review[i].image %>" class="custom-image" alt="Review Image">
                        </a>
                        <span class="card-title"><%= review[i].title.substring(0, 30) %></span>
                        <p style="font-size: 12px;"><%= review[i].review.substring(0, 20) %>...</p>
                    </div>
                    <div class="card-action">
                        <a href="/review/<%= review[i]._id %>">Read this review</a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>
</div>

<%- include('partials/footer') -%>
